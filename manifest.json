{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0.0",
    "description": "Allows the user to record the whole screen or a specific tab",
    "icons":{
        "128": "/images/logo.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "index.html",
        "default_icon":{
            "32": "/images/logo.png"
        }
    },

    "host_permissions":[
        "http://*/",
        "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ]
}